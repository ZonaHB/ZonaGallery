<?xml version='1.0' encoding='utf-8'?>
<widget id="com.zona.gallery" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <name>ZGallery</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon density="hdpi" src="res/icon/android/icon-36-ldpi.png" />
    <icon density="xhdpi" src="res/icon/android/icon-48-mdpi.png" />
    <icon density="xxhdpi" src="res/icon/android/icon-72-hdpi.png" />
    <icon density="xxxhdpi" src="res/icon/android/icon-96-xhdpi.png" />
    <splash density="port-hdpi" src="res/screen/android/splash-hdpi.png" />
    <splash density="port-ldpi" src="res/screen/android/splash-ldpi.png" />
    <splash density="port-mdpi" src="res/screen/android/splash-mdpi.png" />
    <splash density="port-xhdpi" src="res/screen/android/splash-xhdpi.png" />
    <preference name="loglevel" value="DEBUG" />
</widget>
